    <script>
        const answers = {
            1: { correct: 'simple', explanation: 'This is a SIMPLE sentence because it has only one independent clause with one subject ("Maria") and one verb ("studied"). There are no conjunctions joining two complete thoughts.' },
            2: { correct: 'compound', explanation: 'This is a COMPOUND sentence because it has two independent clauses joined by the coordinating conjunction "but". Both parts could stand alone as complete sentences: "The library opens at nine o\'clock" AND "I need to arrive earlier".' },
            3: { correct: 'complex', explanation: 'This is a COMPLEX sentence because it has a dependent clause ("Because the weather was cold") joined to an independent clause ("we decided to stay inside"). The word "Because" is a subordinating conjunction that makes the first part dependent.' },
            4: { correct: 'simple', explanation: 'This is a SIMPLE sentence because it has only one independent clause with one subject ("My brother") and one verb ("plays"). There are no conjunctions joining multiple clauses.' },
            5: { correct: 'complex', explanation: 'This is a COMPLEX sentence because it has a dependent clause ("When the bell rang") joined to an independent clause ("the students walked to their next class"). The word "When" is a subordinating conjunction.' },
            6: { correct: 'compound', explanation: 'This is a COMPOUND sentence because it has two independent clauses joined by the coordinating conjunction "so". Both parts could stand alone: "I wanted to go to the movies" AND "I asked my friends to join me".' },
            7: { correct: 'simple', explanation: 'This is a SIMPLE sentence because it has only one independent clause with one subject ("The teacher") and one verb ("explained"). There are no conjunctions joining multiple clauses.' },
            8: { correct: 'complex', explanation: 'This is a COMPLEX sentence because it has a dependent clause ("Although I was tired") joined to an independent clause ("I finished my homework before dinner"). The word "Although" is a subordinating conjunction.' },
            9: { correct: 'compound', explanation: 'This is a COMPOUND sentence because it has two independent clauses joined by the coordinating conjunction "and". Both parts could stand alone: "The concert was amazing" AND "everyone enjoyed the music".' },
            10: { correct: 'complex', explanation: 'This is a COMPLEX sentence because it has a dependent clause ("If you study regularly") joined to an independent clause ("you will improve your grades"). The word "If" is a subordinating conjunction.' }
        };

        function checkAnswers() {
            let score = 0;
            const total = 10;

            for (let i = 1; i <= total; i++) {
                const simple = document.getElementById(`q${i}-simple`);
                const compound = document.getElementById(`q${i}-compound`);
                const complex = document.getElementById(`q${i}-complex`);
                const feedback = document.getElementById(`feedback${i}`);
                const item = simple.closest('.sentence-item');

                let userAnswer = '';
                if (simple.checked) userAnswer = 'simple';
                else if (compound.checked) userAnswer = 'compound';
                else if (complex.checked) userAnswer = 'complex';

                if (userAnswer === '') {
                    feedback.className = 'feedback show incorrect';
                    feedback.innerHTML = '<div class="feedback-title">‚ö†Ô∏è No answer selected</div><div>Please select an answer before checking.</div>';
                    item.classList.remove('correct', 'incorrect');
                } else if (userAnswer === answers[i].correct) {
                    score++;
                    feedback.className = 'feedback show correct';
                    feedback.innerHTML = '<div class="feedback-title">‚úì Correct!</div><div>' + answers[i].explanation + '</div>';
                    item.classList.remove('incorrect');
                    item.classList.add('correct');
                } else {
                    feedback.className = 'feedback show incorrect';
                    let wrongExplanation = '';
                    
                    if (userAnswer === 'simple' && answers[i].correct !== 'simple') {
                        wrongExplanation = 'This is NOT a simple sentence because it has more than one clause. ';
                    } else if (userAnswer === 'compound' && answers[i].correct !== 'compound') {
                        wrongExplanation = 'This is NOT a compound sentence because it does not have two independent clauses joined by a coordinating conjunction (for, and, nor, but, or, yet, so). ';
                    } else if (userAnswer === 'complex' && answers[i].correct !== 'complex') {
                        wrongExplanation = 'This is NOT a complex sentence because it does not have a dependent clause with a subordinating conjunction (like because, although, when, if, since). ';
                    }
                    
                    feedback.innerHTML = '<div class="feedback-title">‚úó Incorrect</div><div>' + wrongExplanation + answers[i].explanation + '</div>';
                    item.classList.remove('correct');
                    item.classList.add('incorrect');
                }
            }

            const scoreDisplay = document.getElementById('scoreDisplay');
            scoreDisplay.className = 'score-display show';
            scoreDisplay.innerHTML = `Your Score: ${score} out of ${total} (${Math.round(score/total * 100)}%)`;
            scoreDisplay.scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }

        // Prevent multiple checkboxes from being selected
        document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
            checkbox.addEventListener('change', function() {
                if (this.checked) {
                    const name = this.getAttribute('name');
                    document.querySelectorAll(`input[name="${name}"]`).forEach(other => {
                        if (other !== this) other.checked = false;
                    });
                }
            });
        });
    </script>
